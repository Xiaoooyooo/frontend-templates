{
  "compilerOptions": {
    "lib": [
      "es2023"
    ],
    "module": "ESNext",
    "target": "es2022",
    "moduleResolution": "Bundler",
    "strict": true,
    "composite": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "allowJs": true,
    "noEmit": true
  },
  "include": [
    "*.config.js",
    "*.config.ts"
  ]
}